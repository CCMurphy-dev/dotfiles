
# Window management
 
# Equalize size of windows
hyper - space : yabai -m space --balance

# Move windows
hyper - a : yabai -m window --warp west
hyper - d : yabai -m window --warp east
hyper - w : yabai -m window --warp north
hyper - s : yabai -m window --warp south

# Rotate Yabai windows
hyper - r :  yabai -m space --rotate 90

hyper - m : ~/.config/yabai/scripts/yabai-ultra.sh

# Float / unfloat window and center on screen - fullscreen
hyper - t : yabai -m window --toggle float;\
          yabai -m window --grid 1:1:1:1:2:2

# Float / unfloat window and center on screen - center
hyper - y : yabai -m window --toggle float;\
          yabai -m window --grid 1:4:1:1:2:2

# Float / unfloat window and center on screen - small window
hyper - u : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# Toggle fullscreen window
hyper - i : yabai -m window --toggle native-fullscreen

# Rotate Yabai windows
hyper - r :  yabai -m space --rotate 90

# Change Yabai Buffers
hyper - o : yabai -m config left_padding 200; yabai -m config right_padding 200
hyper - p : yabai -m config left_padding 50; yabai -m config right_padding 50

# Window movement

# Move focus container to workspace
# hyper - 1 : yabai -m window --space 1; yabai -m space --focus 1; ctrl + 1
# hyper - 1 : yabai -m window --space 1 "

hyper - 1 : yabai -m space --focus 1 
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4
hyper - 5 : yabai -m space --focus 5
hyper - 6 : yabai -m space --focus 6
hyper - 7 : yabai -m space --focus 7
hyper - 8 : yabai -m space --focus 8
hyper - 9 : yabai -m space --focus 9

